<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="AerodromJPA" transaction-type="RESOURCE_LOCAL">
		<class>model.Aerodrom</class>
		<class>model.Karta</class>
		<class>model.Kompanija</class>
		<class>model.Korisnik</class>
		<class>model.Let</class>
		<class>model.Mesto</class>
		<class>model.Platnakartica</class>
		<class>model.Putnik</class>
		<class>model.Recenzija</class>
		<class>model.Uloga</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
